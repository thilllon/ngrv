{
  "name": "ngrv",
  "version": "1.0.9",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@7.21.0",
  "author": "thilllon <thilllon970@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/thilllon/ngrv.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "build:tsc": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "prepare": "husky install && chmod +x .husky/*",
    "format": "prettier --write --list-different .",
    "release": "pnpm format && pnpm lint && pnpm test && pnpm build && release-it",
    "lint": "eslint --fix ."
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-conventional",
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": "true"
    }
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^9.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "commitizen": "^4.2.6",
    "commitlint": "^17.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.31.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.0",
    "jest": "^29.2.2",
    "lint-staged": "^13.1.0",
    "np": "^7.6.2",
    "prettier": "^2.8.1",
    "release-it": "^15.6.0",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "**/src/**/*": [
      "prettier -w -l",
      "eslint --fix",
      "prettier -w -l",
      "eslint --fix",
      "prettier -w -l",
      "eslint --fix"
    ]
  }
}
